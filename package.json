{
    "name": "typescript-bot-template",
    "version": "1.0.0",
    "description": "Discord Bot template made in TypeScript.",
    "main": "index.ts",
    "scripts": {
        "build": "npx rimraf dist && npx tsc",
        "start:dev": "npx ts-node --files src/index.ts",
        "start:watch": "npx nodemon --files src/index.ts",
        "start:build": "node --no-warnings dist/src/index.js"
    },
    "keywords": [
        "discord",
        "bot"
    ],
    "author": "justcarlux",
    "license": "ISC",
    "devDependencies": {
        "@types/node": "^20.11.17",
        "nodemon": "^3.0.3",
        "rimraf": "^3.0.2",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "discord.js": "^14.9.0",
        "dotenv": "^16.0.3"
    }
}
